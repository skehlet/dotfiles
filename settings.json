// Place your settings in this file to overwrite the default settings
{
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[yaml]": {
        // "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.tabSize": 4
    },
    "aws.suppressPrompts": {
        "codeWhispererNewWelcomeMessage": true
    },
    "boot-java.rewrite.reconcile": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.find.seedSearchStringFromSelection": "never",
    // "editor.fontFamily": "Menlo",
    // "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    // "editor.fontSize": 13,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "alt",
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "eslint.format.enable": true,
    "explorer.confirmDragAndDrop": false,
    "files.exclude": {
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.project": true,
        "**/.settings": true
    },
    "git.confirmSync": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.currentLine.enabled": false,
    "go.alternateTools": {
        "go": "/opt/homebrew/bin/go"
    },
    "go.toolsEnvVars": {
        "GOPRIVATE": "bitbucket.org/avaneer"
    },
    "go.toolsManagement.autoUpdate": true,
    "gopls": {
        "ui.diagnostic.staticcheck": true
    },
    // "gradle.nestedProjects": true,
    "html.format.endWithNewline": true,
    "jupyter.askForKernelRestart": false,
    "jupyter.interactiveWindow.creationMode": "perFile",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "search.exclude": {
        "**/node_modules": false,
        "/node_modules": true
    },
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.env.osx": {
        "GOPRIVATE": "bitbucket.org/avaneer"
    },
    "terminal.integrated.fontFamily": "Menlo",
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.scrollback": 10000,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            // "statusBar.background" : "#486357",
            // "statusBar.foreground" : "#c8e9c5",
            "tab.activeBackground": "#434444",
            // "tab.activeForeground": "#e100ff",
            "tab.inactiveBackground": "#212121"
            // "tab.inactiveForeground": "#00b7ff",
            // "tab.lastPinnedBorder": "#fafafa",
            // "tab.unfocusedActiveForeground": "#fbff00",
            // "tab.unfocusedActiveBackground": "#ff0000",
        }
        // "[Some Other Theme Name]": {
        //     "statusBar.background" : "#385357",
        //     "statusBar.foreground" : "#d7e9c4",
        // }
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.wrapTabs": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.tree.indent": 18,
    "yaml.customTags": [
        "!Equals sequence",
        "!FindInMap sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!Join sequence",
        "!Ref",
        "!Select sequence",
        "!Split sequence",
        "!Sub"
    ],
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.untitled.labelFormat": "name",
    "[jinja]": {},
    "black-formatter.args": [
        "--line-length",
        "120"
    ]
}